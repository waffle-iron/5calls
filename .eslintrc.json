{
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    // things at the root run in node, like karma conf, gulp, etc.
    "node": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "no-unused-vars": "error",
    "no-undef":  "error",
    "no-console": "error",
    "indent": ["error", 2],
    "semi": ["error", "always", { "omitLastInOneLineBlock": true }]
  }
}
